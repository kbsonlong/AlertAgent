# AlertAgent 环境变量配置示例
# 复制此文件为 .env.dev, .env.test, .env.prod 并根据环境修改

# 项目配置
COMPOSE_PROJECT_NAME=alertagent

# 数据库配置
MYSQL_ROOT_PASSWORD=your_strong_password_here
MYSQL_DATABASE=alert_agent
MYSQL_USER=alertagent
MYSQL_PASSWORD=your_strong_password_here
DB_HOST=mysql
DB_PORT=3306
DB_USER=alertagent
DB_PASSWORD=your_strong_password_here
DB_NAME=alert_agent

# Redis配置
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# AlertAgent配置
JWT_SECRET=your_jwt_secret_key_change_in_production
SERVER_MODE=release
OLLAMA_ENDPOINT=http://ollama:11434

# Worker配置
AI_WORKER_CONCURRENCY=3
NOTIFICATION_WORKER_CONCURRENCY=5
CONFIG_WORKER_CONCURRENCY=2
AI_WORKER_REPLICAS=2
NOTIFICATION_WORKER_REPLICAS=2
CONFIG_WORKER_REPLICAS=1

# 监控配置
ENABLE_MONITORING=true
METRICS_PORT=9090

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=100
LOG_MAX_AGE=7
LOG_MAX_BACKUPS=10

# 安全配置
ENABLE_HTTPS=false
TLS_CERT_FILE=/etc/ssl/certs/alertagent.crt
TLS_KEY_FILE=/etc/ssl/private/alertagent.key

# 外部服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password

# Sidecar配置 (用于与监控系统集成)
ALERTAGENT_ENDPOINT=http://alertagent-core:8080
CLUSTER_ID=default
CONFIG_TYPE=prometheus
CONFIG_PATH=/etc/prometheus/rules.yml
RELOAD_URL=http://prometheus:9090/-/reload
SYNC_INTERVAL=30s
HEALTH_PORT=8081